<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/solutionImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="@string/image_of_solution" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/solutionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/emailCompanyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_mail_outline_black_24px" />

            <ImageView
                android:id="@+id/favoritePicture"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end"
                android:layout_marginRight="5dp"
                android:contentDescription="@string/favorite_picture" />
        </LinearLayout>

        <TextView
            android:id="@+id/solutionCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/overviewandbenefits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/solution_overview_amp_benefits"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/historyanddevelopment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_amp_development"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/histAndDevText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/availability"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/availabilityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/specifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specifications"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/specificationsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/additionalinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additional_information"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addtionalInformationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contactText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>